# DevSecrin Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================
# Database Configuration
# ==============================================
DATABASE_URL=postgresql://devsecrin:devsecrin@localhost:5432/devsecrin
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=devsecrin
DATABASE_USER=devsecrin
DATABASE_PASSWORD=devsecrin

# Advanced Database Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ==============================================
# AI Model Configuration (Ollama)
# ==============================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:1.5b

# ==============================================
# Gemini Configurations
# ==============================================
GEMINI_API_KEY=your_gemini_api_key

# ==============================================
# Vector Database Configuration (ChromaDB)
# ==============================================
CHROMA_PERSIST_DIRECTORY=./chroma_store
CHROMA_COLLECTION_NAME=docs
CHROMA_COLLECTION_SIZE=100000

# ==============================================
# API Configuration
# ==============================================
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000
DEBUG=false

# Security
API_KEY=your_api_key_here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_PER_MINUTE=60

# ==============================================
# Frontend Configuration
# ==============================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# ==============================================
# GitHub Integration (Optional)
# ==============================================
# Get token from: https://github.com/settings/tokens
# Required permissions: repo, read:org
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repository_name

# ==============================================
# Confluence Integration (Optional)
# ==============================================
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
CONFLUENCE_URL=https://your-domain.atlassian.net
CONFLUENCE_USERNAME=your_email@example.com
CONFLUENCE_API_TOKEN=your_confluence_api_token

# ==============================================
# Performance Configuration
# ==============================================
EMBEDDING_BATCH_SIZE=50
MAX_CONTEXT_LENGTH=4000

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==============================================
# Development Settings
# ==============================================
# Set to true for development mode
DEBUG=false

# Hot reload for development
RELOAD=true

# ==============================================
# Production Settings
# ==============================================
# SSL/TLS Configuration
SSL_CERT_FILE=
SSL_KEY_FILE=

# Workers for production
WORKERS=4

# ==============================================
# Monitoring and Observability
# ==============================================
# Enable metrics collection
METRICS_ENABLED=true
METRICS_PORT=9090

# Health check configuration
HEALTH_CHECK_INTERVAL=30

# ==============================================
# Feature Flags
# ==============================================
# Enable/disable features
ENABLE_GITHUB_INTEGRATION=true
ENABLE_CONFLUENCE_INTEGRATION=true
ENABLE_WEBSOCKET=true
ENABLE_GRAPH_RAG=true

# ==============================================
# Advanced AI Configuration
# ==============================================
# GPU acceleration (if available)
OLLAMA_GPU_LAYERS=35

# Context window settings
MAX_TOKENS=2048
TEMPERATURE=0.7

# ==============================================
# Storage Configuration
# ==============================================
# Upload directory for documents
UPLOAD_DIR=./uploads

# Temporary files directory
TEMP_DIR=./temp

# Backup directory
BACKUP_DIR=./backups
