# DevSecrin Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================
# Database Configuration
# ==============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/devsecrin
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=devsecrin
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# ==============================================
# AI Model Configuration (Ollama - Local)
# ==============================================
# Make sure Ollama is installed and running: https://ollama.ai
# Download models: ollama pull deepseek-r1:1.5b
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:1.5b

# ==============================================
# Vector Database Configuration (ChromaDB)
# ==============================================
CHROMA_PERSIST_DIRECTORY=./gemini_store

# ==============================================
# GitHub Integration (Optional)
# ==============================================
# Get token from: https://github.com/settings/tokens
# Required permissions: repo, read:org
GITHUB_TOKEN=your_github_token_here
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repository_name

# ==============================================
# Confluence Integration (Optional)
# ==============================================
# Get API token from: https://id.atlassian.com/manage-profile/security/api-tokens
CONFLUENCE_URL=your_confluence_url
CONFLUENCE_USERNAME=your_username
CONFLUENCE_API_TOKEN=your_api_token

# ==============================================
# API Configuration
# ==============================================
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000

# ==============================================
# Frontend Configuration
# ==============================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# ==============================================
# AI Provider Configuration
# ==============================================

# Gemini Configuration (Google Cloud)
# Get API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# ==============================================
# Embeddings & LLM Provider Selection
# ==============================================

# Embedder Configuration
# Options: ollama (local), gemini (cloud)
EMBEDDER_NAME=gemini

# LLM Provider for text generation
# Options: ollama (local), gemini (cloud)
LLM_PROVIDER=gemini
