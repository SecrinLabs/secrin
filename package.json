{
  "name": "devsecrin",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "api": "python start_api.py",
    "main": "python main.py",
    "devsecrin": "concurrently -k -n frontend,api -c green,blue \"pnpm dev\" \"pnpm api\"",
    "migrate": "python packages/dbup/runner.py",
    "clean:modules": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
    "clean:store": "pnpm store prune",
    "clean": "pnpm run clean:modules && pnpm run clean:store"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "concurrently": "^9.2.0",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
